@model AddNewRecipeViewModel
@{
    ViewData["Title"] = "Add a new Recipe";
}

<h1>Add a new recipe</h1>

<div asp-validation-summary="ModelOnly"></div>

<form enctype="multipart/form-data" asp-action="Add">
    <h3>Introduction</h3>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title"/>
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea class="form-control" asp-for="Comment"></textarea>
        <span asp-validation-for="Comment"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="file" asp-for="Image">
    </div>

    <h3>Ingredients</h3>
    <div id="ingredients">
    @for (var i = 0; i < Model.Ingredients.Count; i++)
    {
        @Html.EditorFor(model => Model.Ingredients[i])
    }
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-secondary" onclick="javascript: AddIngredient();">Add Another Ingredient</button>
    </div>

    <h3>Instructions</h3>
    <div id="instructions">
    @for (var i = 0; i < Model.Instructions.Count; i++)
    {
        @Html.EditorFor(model => Model.Instructions[i])
    }
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-secondary" onclick="javascript: AddInstruction();">Add Another Instruction</button>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save"/>
    </div>
</form>