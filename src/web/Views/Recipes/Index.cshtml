@{
    ViewData["Title"] = "Recipes";
}
@model RecipeListViewModel

<form method="get">
    <input type="text" name="filter" value=@Model.Filter />
    <input type="submit" value="Filter" />
</form>

<table>
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipeListItem in Model.Recipes)
        {
            <tr>
                <td>@Html.ActionLink(recipeListItem.Title, "View", "Recipes", new {Id = recipeListItem.Id})</td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Add new recipe", "Add", "Recipes")
